{{#unless options.nolabel}}
    <label class="control-label {{#if horizontal}}col-sm-4{{/if}}">
        {{t string}}
    </label>
{{/unless}}
<div class="{{#if horizontal}}col-sm-8{{/if}}">
    {{#if value}}
        {{#if picture}}
            <a href="/static/db/{{context.dbname}}/files/{{value}}" {{#if options.target}}target="{{options.target}}"{{/if}}>
                {{value_string}}
                <img src="/static/db/{{context.dbname}}/files/{{value}}" class="thumbnail" style="max-width:200px;max-height:200px"/>
            </a>
        {{else}}
            <a href="/static/db/{{context.dbname}}/files/{{value}}" {{#if options.target}}target="{{options.target}}"{{/if}}>{{value_string}}</a>
        {{/if}}
    {{/if}}
    {{#unless readonly}}
        <span class="progress"></span>
        <button class="btn btn-default btn-sm file-choose">Choose File</button>
        {{#if value}}
            <button class="btn btn-default btn-sm file-clear">Clear</button>
        {{/if}}
        <input type="file" name="file" style="display:none"/>
    {{/unless}}
</div>
